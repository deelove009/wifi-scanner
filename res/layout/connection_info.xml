<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainview_backgroud_color"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/access_point_text_marge"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/connect_status_signal"
            android:layout_width="@dimen/general_item_image_width"
            android:layout_height="@dimen/general_item_image_height"
            android:layout_gravity="start|center_vertical"
            android:contentDescription="@null"
            android:src="@drawable/ic_wifi_signal_4" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/general_item_margin"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/connect_status_ssid"
                style="@style/WifiTextMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_marginTop="@dimen/footer_margin_top"
                android:textIsSelectable="false" />

            <TextView
                android:id="@+id/connect_status_info"
                style="@style/WifiTextSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginBottom="@dimen/footer_margin_top"
                android:layout_marginTop="@dimen/footer_margin_top"
                android:textIsSelectable="false" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        style="@style/WifiTextMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/connection_login_time" />

    <Button
        android:id="@+id/connect_status_info_time"
        style="@style/WifiGeneralButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/person_info_marge"
        android:clickable="false" />

    <LinearLayout
        android:id="@+id/conn_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/filter_container_sider"
        android:orientation="vertical" >
    </LinearLayout>

    <LinearLayout
        android:id="@+id/connect_status_login_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/person_info_marge"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/connec_status_login_btn"
            style="@style/WifiGeneralButton"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_weight="1"
            android:text="@string/connection_info_login" />

        <Button
            android:id="@+id/connect_status_back_btn1"
            style="@style/WifiGeneralButton"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_weight="1"
            android:text="@string/connection_info_back" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/connect_status_logout_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/person_info_marge"
        android:orientation="horizontal"
        android:visibility="gone" >

        <Button
            android:id="@+id/connec_status_logout_btn"
            style="@style/WifiGeneralButton"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_weight="1"
            android:text="@string/connection_info_logout" />

        <Button
            android:id="@+id/connec_status_back_btn2"
            style="@style/WifiGeneralButton"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_weight="1"
            android:text="@string/connection_info_back" />
    </LinearLayout>

    <Button
        android:id="@+id/connec_status_back_btn3"
        style="@style/WifiGeneralButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/person_info_marge"
        android:text="@string/connection_info_back"
        android:visibility="gone" />

</LinearLayout>