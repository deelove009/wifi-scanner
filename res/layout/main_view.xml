<?xml version="1.0" encoding="utf-8"?>
<TabHost xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tabhost"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <FrameLayout
            android:id="@android:id/tabcontent"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.0" />

        <TabWidget
            android:id="@android:id/tabs"
            android:layout_width="fill_parent"
            android:layout_height="0dip"
            android:layout_weight="0.0"
            android:visibility="gone" />

        <RadioGroup
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@drawable/maintab_toolbar_bg"
            android:gravity="center"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/tab_wifi_scan"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/home_btn_bg"
                android:button="@null"
                android:drawableTop="@drawable/icon_wifi"
                android:gravity="center"
                android:paddingTop="5dp"
                android:text="@string/tab_title_wifi_list"
                android:textSize="12sp" />

            <RadioButton
                android:id="@+id/tab_person_centre"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/home_btn_bg"
                android:button="@null"
                android:drawableTop="@drawable/icon_person_centre"
                android:gravity="center"
                android:paddingTop="5dp"
                android:text="@string/tab_title_person_centre"
                android:textSize="12sp" />

            <RadioButton
                android:id="@+id/tab_partership"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/home_btn_bg"
                android:button="@null"
                android:drawableTop="@drawable/icon_partership"
                android:gravity="center"
                android:paddingTop="5dp"
                android:text="@string/tab_title_partership"
                android:textSize="12sp" />

            <RadioButton
                android:id="@+id/tab_settings"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/home_btn_bg"
                android:button="@null"
                android:drawableTop="@drawable/icon_settings"
                android:gravity="center"
                android:paddingTop="5dp"
                android:text="@string/tab_title_settings"
                android:textSize="12sp" />
        </RadioGroup>
    </LinearLayout>

</TabHost>