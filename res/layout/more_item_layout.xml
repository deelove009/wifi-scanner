<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/general_list_item_background"
    android:clickable="true"
    android:focusable="true"
    android:descendantFocusability="beforeDescendants"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/general_list_item_minHeight"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/more_item_front_icon"
            android:layout_width="@dimen/general_item_image_width"
            android:layout_height="@dimen/general_item_image_height"
            android:layout_gravity="start|center_vertical"
            android:contentDescription="@null" />

        <TextView
            android:id="@+id/more_item_title"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/access_point_text_marge"
            android:layout_weight="1"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textIsSelectable="false" />

        <ImageView
            android:id="@+id/more_item_arrow"
            android:layout_width="@dimen/general_item_small_image_width"
            android:layout_height="@dimen/general_item_small_image_width"
            android:layout_gravity="start|center_vertical"
            android:src="@drawable/arrow"
            android:contentDescription="@null" />
    </LinearLayout>

    <View
        android:id="@+id/more_item_divider"
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="?android:attr/listDivider" />

</LinearLayout>